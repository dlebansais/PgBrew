<Application x:Class="PgBrewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PgBrewer"
             xmlns:conv="clr-namespace:Converters"
             Startup="OnStartup">
    <Application.Resources>
        <conv:BooleanToObjectConverter x:Key="convBooleanToObject"/>
        <conv:NullToObjectConverter x:Key="convNullToObject"/>
        <conv:IdToImageSourceConverter x:Key="convIdToImageSource"/>
        <RoutedCommand x:Key="DeleteCommand"/>
        <RoutedCommand x:Key="SaveCommand"/>
        <RoutedCommand x:Key="ExportCommand"/>
        <RoutedCommand x:Key="ImportCommand"/>
        <RoutedCommand x:Key="BackCommand"/>
        <RoutedCommand x:Key="ForwardCommand"/>
        <CompositeCollection x:Key="CollapsedVisible">
            <Visibility>Collapsed</Visibility>
            <Visibility>Visible</Visibility>
        </CompositeCollection>
        <CompositeCollection x:Key="VisibleCollapsed">
            <Visibility>Visible</Visibility>
            <Visibility>Collapsed</Visibility>
        </CompositeCollection>
        <CompositeCollection x:Key="TransparentBlue">
            <SolidColorBrush>Transparent</SolidColorBrush>
            <SolidColorBrush>LightBlue</SolidColorBrush>
        </CompositeCollection>
        <DataTemplate x:Key="ChoiceTemplate">
            <TextBlock Text="{Binding Name}"/>
        </DataTemplate>
        <DataTemplate x:Key="AssociationLine">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left" Text="{Binding Component.Name}" TextAlignment="Right" VerticalAlignment="Center" MinWidth="160"/>
                <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center">:</TextBlock>
                <Button DockPanel.Dock="Right" Command="{StaticResource DeleteCommand}" Content="X" VerticalAlignment="Center" MinWidth="16" Margin="2,1,2,1"/>
                <ComboBox ItemsSource="{Binding ChoiceList}" SelectedIndex="{Binding AssociationIndex}" IsReadOnly="True" ItemTemplate="{StaticResource ChoiceTemplate}" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </DockPanel>
        </DataTemplate>
        <ControlTemplate TargetType="{x:Type Button}" x:Key="MainButtonTemplate">
            <Grid>
                <Border x:Name="BorderTarget" Background="Transparent" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="5" Width="120" Height="40" Margin="0,5,0,5">
                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Content" Margin="12,2,12,2"/>
                </Border>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="BorderTarget" Property="Background" Value="#FFE5F3FB"/>
                    <Setter TargetName="BorderTarget" Property="BorderBrush" Value="#FF70C0E7"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="BorderTarget" Property="Background" Value="Gray"/>
                    <Setter Property="Foreground" Value="DarkGray" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate TargetType="{x:Type TabItem}" x:Key="TabItemLevel1Template">
            <Grid>
                <Border x:Name="BorderTarget" Background="Transparent" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="5" Width="160" Height="140" Margin="0,5,0,5">
                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="12,2,12,2"/>
                </Border>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Panel.ZIndex" Value="100" />
                    <Setter TargetName="BorderTarget" Property="Background" Value="LightBlue" />
                    <Setter TargetName="BorderTarget" Property="BorderThickness" Value="1,1,1,1" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="BorderTarget" Property="Background" Value="DarkBlue" />
                    <Setter TargetName="BorderTarget" Property="BorderBrush" Value="Black" />
                    <Setter Property="Foreground" Value="DarkGray" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate TargetType="{x:Type TabItem}" x:Key="TabItemLevel2Template">
            <Grid>
                <Border x:Name="BorderTarget" Margin="5,4,5,10" Background="Transparent" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" Width="120" Height="24">
                    <ContentPresenter VerticalAlignment="Top" HorizontalAlignment="Center" ContentSource="Header" Margin="12,2,12,2"/>
                </Border>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Panel.ZIndex" Value="100" />
                    <Setter TargetName="BorderTarget" Property="Background" Value="LightBlue" />
                    <Setter TargetName="BorderTarget" Property="BorderThickness" Value="1,1,1,0" />
                    <Setter TargetName="BorderTarget" Property="CornerRadius" Value="5,5,0,0" />
                    <Setter TargetName="BorderTarget" Property="Margin" Value="5,4,5,-1.2" />
                    <Setter TargetName="BorderTarget" Property="Height" Value="35.2" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="BorderTarget" Property="Background" Value="DarkBlue" />
                    <Setter TargetName="BorderTarget" Property="BorderBrush" Value="Black" />
                    <Setter TargetName="BorderTarget" Property="CornerRadius" Value="5,5,5,5" />
                    <Setter TargetName="BorderTarget" Property="Margin" Value="5,4,5,10" />
                    <Setter TargetName="BorderTarget" Property="Height" Value="24" />
                    <Setter Property="Foreground" Value="DarkGray" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <DataTemplate x:Key="PageHeaderTemplate" DataType="{x:Type local:PgBrewerPage}">
            <Grid>
                <Border Visibility="{Binding IsSelected, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource CollapsedVisible}}" Background="LightBlue" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="5" Width="160" Height="140" Margin="0,5,0,5">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{Binding IconId, Converter={StaticResource convIdToImageSource}}" Width="64" Height="64" Margin="0,0,0,10"/>
                        <TextBlock x:Name="TextTargetSelected" FontSize="24" HorizontalAlignment="Center" Text="{Binding Name}"/>
                    </StackPanel>
                </Border>
                <Border x:Name="BorderTarget" Visibility="{Binding IsSelected, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource VisibleCollapsed}}" Background="Transparent" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="5" Width="160" Height="140" Margin="0,5,0,5">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{Binding IconId, Converter={StaticResource convIdToImageSource}}" Width="64" Height="64" Margin="0,0,0,10"/>
                        <TextBlock x:Name="TextTargetUnselected" FontSize="24" HorizontalAlignment="Center" Text="{Binding Name}"/>
                    </StackPanel>
                </Border>
            </Grid>
            <DataTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="BorderTarget" Property="Background" Value="#FFE5F3FB"/>
                    <Setter TargetName="BorderTarget" Property="BorderBrush" Value="#FF70C0E7"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="BorderTarget" Property="Background" Value="Gray"/>
                    <Setter TargetName="TextTargetSelected" Property="Foreground" Value="DarkGray" />
                    <Setter TargetName="TextTargetUnselected" Property="Foreground" Value="DarkGray" />
                </Trigger>
            </DataTemplate.Triggers>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:PgBrewerPageBeers}">
            <Grid>
                <TabControl Margin="10,0,0,0" BorderBrush="Black" Background="LightBlue">
                    <TabItem Header="Basic Lager" Template="{StaticResource TabItemLevel2Template}">
                        <local:Alcoholx4Control DataContext="{Binding BasicLager}"/>
                    </TabItem>
                    <TabItem Header="Pale Ale" Template="{StaticResource TabItemLevel2Template}">
                        <local:Alcoholx4x4Control DataContext="{Binding PaleAle}"/>
                    </TabItem>
                    <TabItem Header="Marzen" Template="{StaticResource TabItemLevel2Template}">
                        <local:Alcoholx4x4x2Control DataContext="{Binding Marzen}"/>
                    </TabItem>
                    <TabItem Header="Goblin Ale" Template="{StaticResource TabItemLevel2Template}">
                        <local:Alcoholx3x3x4x3Control DataContext="{Binding GoblinAle}"/>
                    </TabItem>
                    <TabItem Header="Orcish Bock" Template="{StaticResource TabItemLevel2Template}">
                        <local:Alcoholx4x3x4x3Control DataContext="{Binding OrcishBock}"/>
                    </TabItem>
                    <TabItem Header="Brown Ale" Template="{StaticResource TabItemLevel2Template}">
                        <local:Alcoholx4x3x4x3Control DataContext="{Binding BrownAle}"/>
                    </TabItem>
                    <TabItem Header="Hegemony Lager" Template="{StaticResource TabItemLevel2Template}">
                        <local:Alcoholx4x3x4x3Control DataContext="{Binding HegemonyLager}"/>
                    </TabItem>
                    <TabItem Header="Dwarven Stout" Template="{StaticResource TabItemLevel2Template}">
                        <local:Alcoholx4x3x4x3Control DataContext="{Binding DwarvenStout}"/>
                    </TabItem>
                </TabControl>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5,5,5,5">
                    <Button Command="{StaticResource BackCommand}" IsEnabled="{Binding BackForward.CanGoBack}" Margin="0,0,5,0">
                        <Image Source="./Resources/Undo.png" Width="16" Height="16"/>
                    </Button>
                    <Button Command="{StaticResource ForwardCommand}" IsEnabled="{Binding BackForward.CanGoForward}" Margin="5,0,0,0">
                        <Image Source="./Resources/Redo.png" Width="16" Height="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:PgBrewerPageLiquors}">
            <Grid>
                <TabControl Margin="10,0,0,0" BorderBrush="Black" Background="LightBlue">
                    <TabItem Header="Potato Vodka" Template="{StaticResource TabItemLevel2Template}">
                        <local:Alcoholx3x4x5x4Control DataContext="{Binding PotatoVodka}"/>
                    </TabItem>
                    <TabItem Header="Applejack" Template="{StaticResource TabItemLevel2Template}">
                        <local:Alcoholx3x4x5x4Control DataContext="{Binding Applejack}"/>
                    </TabItem>
                    <TabItem Header="Beet Vodka" Template="{StaticResource TabItemLevel2Template}">
                        <local:Alcoholx3x4x5x4Control DataContext="{Binding BeetVodka}"/>
                    </TabItem>
                    <TabItem Header="Pale Rum" Template="{StaticResource TabItemLevel2Template}">
                        <local:Alcoholx3x4x5x4Control DataContext="{Binding PaleRum}"/>
                    </TabItem>
                    <TabItem Header="Whisky" Template="{StaticResource TabItemLevel2Template}">
                        <local:Alcoholx3x4x5x4Control DataContext="{Binding Whisky}"/>
                    </TabItem>
                    <TabItem Header="Tequila" Template="{StaticResource TabItemLevel2Template}">
                        <local:Alcoholx3x4x5x4Control DataContext="{Binding Tequila}"/>
                    </TabItem>
                    <TabItem Header="Dry Gin" Template="{StaticResource TabItemLevel2Template}">
                        <local:Alcoholx3x4x5x4Control DataContext="{Binding DryGin}"/>
                    </TabItem>
                    <TabItem Header="Bourbon" Template="{StaticResource TabItemLevel2Template}">
                        <local:Alcoholx3x4x5x4Control DataContext="{Binding Bourbon}"/>
                    </TabItem>
                </TabControl>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5,5,5,5">
                    <Button Command="{StaticResource BackCommand}" IsEnabled="{Binding BackForward.CanGoBack}" Margin="0,0,5,0">
                        <Image Source="./Resources/Undo.png" Width="16" Height="16"/>
                    </Button>
                    <Button Command="{StaticResource ForwardCommand}" IsEnabled="{Binding BackForward.CanGoForward}" Margin="5,0,0,0">
                        <Image Source="./Resources/Redo.png" Width="16" Height="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:PgBrewerPageSettings}">
            <Border Margin="10,6,0,0" BorderBrush="Black" BorderThickness="1" Background="LightBlue" CornerRadius="5">
                <ScrollViewer Margin="10,10,10,10">
                    <DockPanel Margin="0,0,10,0">
                        <GroupBox DockPanel.Dock="Top" Grid.Row="0" Grid.Column="0" Header="Miscellaneous" Padding="5,5,5,5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <ItemsControl Grid.Row="0" Grid.Column="0" ItemsSource="{Binding AssociationFruit1}" ItemTemplate="{StaticResource AssociationLine}" Margin="0,0,5,0"/>
                                <ItemsControl Grid.Row="0" Grid.Column="1" ItemsSource="{Binding AssociationVeggie1}" ItemTemplate="{StaticResource AssociationLine}" Margin="5,0,5,0"/>
                                <ItemsControl Grid.Row="0" Grid.Column="2" ItemsSource="{Binding AssociationVeggie2Liquor}" ItemTemplate="{StaticResource AssociationLine}" Margin="5,0,0,0"/>
                            </Grid>
                        </GroupBox>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <GroupBox Grid.Row="0" Grid.Column="0" Header="Veggies for beer" Margin="0,10,5,0" Padding="5,5,5,5">
                                <ItemsControl ItemsSource="{Binding AssociationVeggie2Beer}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </GroupBox>
                            <GroupBox Grid.Row="1" Grid.Column="0" Header="Flavors #1 for beer" Margin="0,10,5,0" Padding="5,5,5,5">
                                <ItemsControl ItemsSource="{Binding AssociationFlavor1Beer}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </GroupBox>
                            <GroupBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Header="Fruits" Margin="0,10,0,0" Padding="5,5,5,5">
                                <ItemsControl ItemsSource="{Binding AssociationFruit2}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </GroupBox>
                            <GroupBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Header="Mushrooms" Margin="0,10,0,0" Padding="5,5,5,5">
                                <ItemsControl ItemsSource="{Binding AssociationMushroom3}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </GroupBox>
                            <GroupBox Grid.Row="4" Grid.Column="0" Header="Flavors #2 for beer" Margin="0,10,5,0" Padding="5,5,5,5">
                                <ItemsControl ItemsSource="{Binding AssociationFlavor2Beer}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </GroupBox>
                            <GroupBox Grid.Row="0" Grid.Column="1" Header="Parts #1 for liquor" Margin="5,10,0,0" Padding="5,5,5,5">
                                <ItemsControl ItemsSource="{Binding AssociationParts1}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </GroupBox>
                            <GroupBox Grid.Row="1" Grid.Column="1" Header="Flavors #1 for liquor" Margin="5,10,0,0" Padding="5,5,5,5">
                                <ItemsControl ItemsSource="{Binding AssociationFlavor1Liquor}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </GroupBox>
                            <GroupBox Grid.Row="4" Grid.Column="1" Header="Parts #2 for liquor" Margin="5,10,0,0" Padding="5,5,5,5">
                                <ItemsControl ItemsSource="{Binding AssociationParts2}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </GroupBox>
                            <GroupBox Grid.Row="5" Grid.Column="1" Header="Flavors #2 for liquor" Margin="5,10,0,0" Padding="5,5,5,5">
                                <ItemsControl ItemsSource="{Binding AssociationFlavor2Liquor}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </GroupBox>
                        </Grid>
                    </DockPanel>
                </ScrollViewer>
            </Border>
        </DataTemplate>
    </Application.Resources>
</Application>
