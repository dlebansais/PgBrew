            <Border x:Name="borderLine">
                <DockPanel Margin="5,2,5,2">
                    <TextBlock DockPanel.Dock="Left" Text="{Binding Component1}" FontSize="16" x:Name="componentText1" VerticalAlignment="Center" Width="130"/>
                    <TextBlock DockPanel.Dock="Left" Text="{Binding Component2}" FontSize="16" x:Name="componentText2" VerticalAlignment="Center" Width="190"/>
                    <TextBlock DockPanel.Dock="Left" Text="{Binding Component3}" FontSize="16" x:Name="componentText3" VerticalAlignment="Center" Width="130"/>
                    <TextBlock DockPanel.Dock="Left" FontWeight="Bold" FontSize="16" Foreground="Red" Visibility="{Binding IsMatching, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource VisibleHidden}}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30">?</TextBlock>
                    <Button DockPanel.Dock="Right" Command="{StaticResource DeleteLineCommand}" Content="X" FontSize="16" MinWidth="16" IsEnabled="{Binding EffectIndex, Converter={StaticResource convPositiveIntToObject}, ConverterParameter={StaticResource FalseTrue}}" VerticalAlignment="Center" Margin="2,1,2,1"/>
                    <Grid VerticalAlignment="Center">
                        <ComboBox ItemsSource="{Binding Owner.EffectTextList}" SelectedIndex="{Binding EffectIndex}" ItemTemplate="{StaticResource EffectTemplate}" ItemContainerStyle="{StaticResource ComboBoxItemStretch}" IsReadOnly="True" HorizontalContentAlignment="Stretch" x:Name="comboEffectList" VerticalAlignment="Center"/>
                        <ContentControl Content="{Binding CalculatedEffect}" ContentTemplate="{StaticResource EffectTemplate}" FontSize="16" Foreground="Gray" VerticalAlignment="Center" IsHitTestVisible="False" Margin="6,0,20,0"/>
                    </Grid>
                </DockPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="Linex3x3x4x3Template">
            <Border x:Name="borderLine">
                <DockPanel Margin="5,2,5,2">
                    <TextBlock DockPanel.Dock="Left" Text="{Binding Component1}" FontSize="16" x:Name="componentText1" VerticalAlignment="Center" Width="100"/>
                    <TextBlock DockPanel.Dock="Left" Text="{Binding Component2}" FontSize="16" x:Name="componentText2" VerticalAlignment="Center" Width="100"/>
                    <TextBlock DockPanel.Dock="Left" Text="{Binding Component3}" FontSize="16" x:Name="componentText3" VerticalAlignment="Center" Width="190"/>
                    <TextBlock DockPanel.Dock="Left" Text="{Binding Component4}" FontSize="16" x:Name="componentText4" VerticalAlignment="Center" Width="130"/>
                    <TextBlock DockPanel.Dock="Left" FontWeight="Bold" FontSize="16" Foreground="Red" Visibility="{Binding IsMatching, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource VisibleHidden}}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30">?</TextBlock>
                    <Button DockPanel.Dock="Right" Command="{StaticResource DeleteLineCommand}" Content="X" FontSize="16" MinWidth="16" IsEnabled="{Binding EffectIndex, Converter={StaticResource convPositiveIntToObject}, ConverterParameter={StaticResource FalseTrue}}" VerticalAlignment="Center" Margin="2,1,2,1"/>
                    <Grid VerticalAlignment="Center">
                        <ComboBox ItemsSource="{Binding Owner.EffectTextList}" SelectedIndex="{Binding EffectIndex}" ItemContainerStyle="{StaticResource ComboBoxItemStretch}" IsReadOnly="True" HorizontalContentAlignment="Stretch" FontSize="16" x:Name="comboEffectList" VerticalAlignment="Center"/>
                        <ContentControl Content="{Binding CalculatedEffect}" ContentTemplate="{StaticResource EffectTemplate}" FontSize="16" Foreground="Gray" VerticalAlignment="Center" IsHitTestVisible="False" Margin="6,0,20,0"/>
                    </Grid>
                </DockPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="Linex4x3x4x3Template">
            <Border x:Name="borderLine">
                <DockPanel Margin="5,2,5,2">
                    <TextBlock DockPanel.Dock="Left" Text="{Binding Component1}" FontSize="16" x:Name="componentText1" VerticalAlignment="Center" Width="120"/>
                    <TextBlock DockPanel.Dock="Left" Text="{Binding Component2}" FontSize="16" x:Name="componentText2" VerticalAlignment="Center" Width="100"/>
                    <TextBlock DockPanel.Dock="Left" Text="{Binding Component3}" FontSize="16" x:Name="componentText3" VerticalAlignment="Center" Width="220"/>
                    <TextBlock DockPanel.Dock="Left" Text="{Binding Component4}" FontSize="16" x:Name="componentText4" VerticalAlignment="Center" Width="150"/>
                    <TextBlock DockPanel.Dock="Left" FontWeight="Bold" FontSize="16" Foreground="Red" Visibility="{Binding IsMatching, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource VisibleHidden}}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30">?</TextBlock>
                    <Button DockPanel.Dock="Right" Command="{StaticResource DeleteLineCommand}" Content="X" FontSize="16" MinWidth="16" IsEnabled="{Binding EffectIndex, Converter={StaticResource convPositiveIntToObject}, ConverterParameter={StaticResource FalseTrue}}" VerticalAlignment="Center" Margin="2,1,2,1"/>
                    <Grid VerticalAlignment="Center">
                        <ComboBox ItemsSource="{Binding Owner.EffectTextList}" SelectedIndex="{Binding EffectIndex}" ItemContainerStyle="{StaticResource ComboBoxItemStretch}" IsReadOnly="True" HorizontalContentAlignment="Stretch" FontSize="16" x:Name="comboEffectList" VerticalAlignment="Center"/>
                        <ContentControl Content="{Binding CalculatedEffect}" ContentTemplate="{StaticResource EffectTemplate}" FontSize="16" Foreground="Gray" VerticalAlignment="Center" IsHitTestVisible="False" Margin="6,0,20,0"/>
                    </Grid>
                </DockPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="Linex3x4x5x4Template">
            <Border x:Name="borderLine">
                <DockPanel Margin="5,2,5,2">
                    <TextBlock DockPanel.Dock="Left" Text="{Binding Component1}" FontSize="16" x:Name="componentText1" VerticalAlignment="Center" Width="120"/>
                    <TextBlock DockPanel.Dock="Left" Text="{Binding Component2}" FontSize="16" x:Name="componentText2" VerticalAlignment="Center" Width="200"/>
                    <TextBlock DockPanel.Dock="Left" Text="{Binding Component3}" FontSize="16" x:Name="componentText3" VerticalAlignment="Center" Width="160"/>
                    <TextBlock DockPanel.Dock="Left" Text="{Binding Component4}" FontSize="16" x:Name="componentText4" VerticalAlignment="Center" Width="190"/>
                    <TextBlock DockPanel.Dock="Left" FontWeight="Bold" FontSize="16" Foreground="Red" Visibility="{Binding IsMatching, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource VisibleHidden}}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30">?</TextBlock>
                    <Button DockPanel.Dock="Right" Command="{StaticResource DeleteLineCommand}" Content="X" FontSize="16" MinWidth="16" IsEnabled="{Binding EffectIndex, Converter={StaticResource convPositiveIntToObject}, ConverterParameter={StaticResource FalseTrue}}" VerticalAlignment="Center" Margin="2,1,2,1"/>
                    <Grid VerticalAlignment="Center">
                        <ComboBox ItemsSource="{Binding Owner.EffectTextList}" SelectedIndex="{Binding EffectIndex}" ItemContainerStyle="{StaticResource ComboBoxItemStretch}" IsReadOnly="True" HorizontalContentAlignment="Stretch" FontSize="16" x:Name="comboEffectList" VerticalAlignment="Center"/>
                        <ContentControl Content="{Binding CalculatedEffect}" ContentTemplate="{StaticResource EffectTemplate}" FontSize="16" Foreground="Gray" VerticalAlignment="Center" IsHitTestVisible="False" Margin="6,0,20,0"/>
                    </Grid>
                </DockPanel>
            </Border>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:Alcoholx3x3x4x3}">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock FontSize="16" TextAlignment="Right" Width="558" Margin="0,0,5,0">Mismatch Count:</TextBlock>
                    <TextBlock Text="{Binding MismatchCount}" FontSize="16" Width="40"/>
                </StackPanel>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListBox ItemsSource="{Binding Lines}" SelectedIndex="{Binding SelectedLine}" ItemTemplate="{StaticResource Linex3x3x4x3Template}" Background="LightBlue" BorderThickness="0" ItemContainerStyle="{StaticResource ListBoxItemStretchSelectable}" HorizontalContentAlignment="Stretch" SelectionChanged="OnSelectionChanged"/>
                </ScrollViewer>
            </DockPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:Alcoholx3x4x5x4}">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock FontSize="16" TextAlignment="Right" Width="708" Margin="0,0,5,0">Mismatch Count:</TextBlock>
                    <TextBlock Text="{Binding MismatchCount}" FontSize="16" Width="40"/>
                </StackPanel>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListBox ItemsSource="{Binding Lines}" SelectedIndex="{Binding SelectedLine}" ItemTemplate="{StaticResource Linex3x4x5x4Template}" Background="LightBlue" BorderThickness="0" ItemContainerStyle="{StaticResource ListBoxItemStretchSelectable}" HorizontalContentAlignment="Stretch" SelectionChanged="OnSelectionChanged"/>
                </ScrollViewer>
            </DockPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:Alcoholx4}">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock FontSize="16" TextAlignment="Right" Width="168" Margin="0,0,5,0">Mismatch Count:</TextBlock>
                    <TextBlock Text="{Binding MismatchCount}" FontSize="16" Width="40"/>
                </StackPanel>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListBox ItemsSource="{Binding Lines}" SelectedIndex="{Binding SelectedLine}" ItemTemplate="{StaticResource Linex4Template}" Background="LightBlue" BorderThickness="0" ItemContainerStyle="{StaticResource ListBoxItemStretchSelectable}" HorizontalContentAlignment="Stretch" SelectionChanged="OnSelectionChanged"/>
                </ScrollViewer>
            </DockPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:Alcoholx4x3x4x3}">
