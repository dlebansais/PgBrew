<Application x:Class="PgBrewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:localconv="clr-namespace:Converters"
             xmlns:conv="clr-namespace:Converters;assembly=XamlConverterLibrary"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:PgBrewer"
             Startup="OnStartup">
    <Application.Resources>
        <conv:BooleanToObjectConverter x:Key="convBooleanToObject"/>
        <CompositeCollection x:Key="CollapsedVisible">
            <Visibility>Collapsed</Visibility>
            <Visibility>Visible</Visibility>
        </CompositeCollection>
        <CompositeCollection x:Key="VisibleCollapsed">
            <Visibility>Visible</Visibility>
            <Visibility>Collapsed</Visibility>
        </CompositeCollection>
        <CompositeCollection x:Key="DisabledNormal">
            <sys:Double>0.3</sys:Double>
            <sys:Double>1</sys:Double>
        </CompositeCollection>
        <Style x:Key="ListBoxItemStretchDragDrop" TargetType="{x:Type ListBoxItem}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="AllowDrop" Value="True" />
            <EventSetter Event="MouseMove" Handler="OnListBoxItemMouseMove"/>
            <EventSetter Event="Drop" Handler="OnListBoxItemDrop" />
        </Style>
        <Style x:Key="ListBoxItemStretchSelectable" TargetType="{x:Type ListBoxItem}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>
        <Style x:Key="ListBoxItemStretch" TargetType="{x:Type ListBoxItem}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Focusable" Value="False"/>
        </Style>
        <Style x:Key="ComboBoxItemStretch" TargetType="{x:Type ComboBoxItem}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>
        <Style x:Key="ListViewItemStretchSelectable" TargetType="{x:Type ListViewItem}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>
        <Style x:Key="ListViewItemStretch" TargetType="{x:Type ListViewItem}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Focusable" Value="False"/>
        </Style>
        <Style x:Key="ListViewHeaderStretch" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <ControlTemplate x:Key="TabItemNoStyleTemplate" TargetType="{x:Type TabItem}">
            <ContentPresenter ContentSource="Header"/>
        </ControlTemplate>
        <Style x:Key="TabItemNoStyle" TargetType="{x:Type TabItem}">
            <Setter Property="Template" Value="{StaticResource TabItemNoStyleTemplate}"/>
        </Style>
        <ItemsPanelTemplate x:Key="HorizontalWrapPanelTemplate">
            <WrapPanel Orientation="Horizontal"/>
        </ItemsPanelTemplate>
        <ItemsPanelTemplate x:Key="VerticalWrapPanelTemplate">
            <WrapPanel Orientation="Vertical"/>
        </ItemsPanelTemplate>
        <ItemsPanelTemplate x:Key="HorizontalVirtualizingStackPanelTemplate">
            <VirtualizingStackPanel Orientation="Horizontal"/>
        </ItemsPanelTemplate>
        <localconv:IdToImageSourceConverter x:Key="convIdToImageSource"/>
        <localconv:PositiveIntToObjectConverter x:Key="convPositiveIntToObject"/>
        <CompositeCollection x:Key="VisibleHidden">
            <Visibility>Visible</Visibility>
            <Visibility>Hidden</Visibility>
        </CompositeCollection>
        <CompositeCollection x:Key="FalseTrue">
            <sys:Boolean>False</sys:Boolean>
            <sys:Boolean>True</sys:Boolean>
        </CompositeCollection>
        <BitmapImage x:Key="imgUndo" UriSource="/PgBrewer;component/Resources/Undo.png"/>
        <BitmapImage x:Key="imgRedo" UriSource="/PgBrewer;component/Resources/Redo.png"/>
        <RoutedCommand x:Key="DeleteCommand"/>
        <RoutedCommand x:Key="SaveCommand"/>
        <RoutedCommand x:Key="ExportCommand"/>
        <RoutedCommand x:Key="ImportCommand"/>
        <RoutedCommand x:Key="BackCommand"/>
        <RoutedCommand x:Key="ForwardCommand"/>
        <RoutedCommand x:Key="DeleteLineCommand"/>
        <ControlTemplate x:Key="MainButtonTemplate" TargetType="{x:Type Button}">
            <Border BorderBrush="#FFACACAC" BorderThickness="1" CornerRadius="5" x:Name="BorderTarget" Width="120" Height="40" Margin="0,5,0,5">
                <ContentPresenter ContentSource="Content" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="12,2,12,2"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="BorderTarget" Property="Background" Value="#FFE5F3FB"/>
                    <Setter TargetName="BorderTarget" Property="BorderBrush" Value="#FF70C0E7"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="BorderTarget" Property="Background" Value="Gray"/>
                    <Setter Property="Foreground" Value="DarkGray"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <DataTemplate x:Key="ChoiceTemplate">
            <TextBlock Text="{Binding Name}" FontSize="16"/>
        </DataTemplate>
        <DataTemplate x:Key="AssociationLine">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left" Text="{Binding Component.Name}" FontSize="16" TextAlignment="Right" VerticalAlignment="Center" Width="210"/>
                <TextBlock DockPanel.Dock="Left" FontSize="16" VerticalAlignment="Center">:</TextBlock>
                <Button DockPanel.Dock="Right" Command="{StaticResource DeleteCommand}" Content="X" FontSize="16" MinWidth="16" VerticalAlignment="Center" Margin="2,1,2,1"/>
                <ComboBox ItemsSource="{Binding ChoiceList}" SelectedIndex="{Binding AssociationIndex}" ItemTemplate="{StaticResource ChoiceTemplate}" ItemContainerStyle="{StaticResource ComboBoxItemStretch}" IsReadOnly="True" HorizontalContentAlignment="Stretch" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </DockPanel>
        </DataTemplate>
        <DataTemplate x:Key="PageHeaderTemplate" DataType="{x:Type local:PgBrewerPage}">
            <Grid>
                <Border Background="LightBlue" BorderBrush="#FFACACAC" BorderThickness="1" CornerRadius="5" Visibility="{Binding IsSelected, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource CollapsedVisible}}" Width="160" Height="140" Margin="0,5,0,5">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{Binding IconId, Converter={StaticResource convIdToImageSource}}" Width="64" Height="64" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding Name}" FontSize="24" x:Name="TextTargetSelected" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border BorderBrush="#FFACACAC" BorderThickness="1" CornerRadius="5" x:Name="BorderTarget" Visibility="{Binding IsSelected, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource VisibleCollapsed}}" Width="160" Height="140" Margin="0,5,0,5">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{Binding IconId, Converter={StaticResource convIdToImageSource}}" Width="64" Height="64" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding Name}" FontSize="24" x:Name="TextTargetUnselected" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
            <DataTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="BorderTarget" Property="Background" Value="#FFE5F3FB"/>
                    <Setter TargetName="BorderTarget" Property="BorderBrush" Value="#FF70C0E7"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="BorderTarget" Property="Background" Value="Gray"/>
                    <Setter TargetName="TextTargetSelected" Property="Foreground" Value="DarkGray"/>
                    <Setter TargetName="TextTargetUnselected" Property="Foreground" Value="DarkGray"/>
                </Trigger>
            </DataTemplate.Triggers>
        </DataTemplate>
        <DataTemplate x:Key="TabItemLevel2Template" DataType="{x:Type local:Alcohol}">
            <Grid>
                <Border Background="LightBlue" BorderBrush="#FFACACAC" BorderThickness="1,1,1,0" CornerRadius="5,5,0,0" Visibility="{Binding IsSelected, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource CollapsedVisible}}" Width="180" Height="43.2" Margin="5,4,5,-1.2">
                    <TextBlock Text="{Binding Name}" FontSize="16" x:Name="TextTargetSelected" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="12,2,12,2"/>
                </Border>
                <Border BorderBrush="#FFACACAC" BorderThickness="1" CornerRadius="5" x:Name="BorderTarget" Visibility="{Binding IsSelected, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource VisibleCollapsed}}" Width="160" Height="32" Margin="5,4,5,10">
                    <TextBlock Text="{Binding Name}" FontSize="16" x:Name="TextTargetUnselected" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="12,2,12,2"/>
                </Border>
            </Grid>
            <DataTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="BorderTarget" Property="Background" Value="#FFE5F3FB"/>
                    <Setter TargetName="BorderTarget" Property="BorderBrush" Value="#FF70C0E7"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="BorderTarget" Property="Background" Value="DarkBlue"/>
                    <Setter TargetName="BorderTarget" Property="BorderBrush" Value="Black"/>
                    <Setter TargetName="BorderTarget" Property="CornerRadius" Value="5,5,5,5"/>
                    <Setter TargetName="BorderTarget" Property="Margin" Value="5,4,5,10"/>
                    <Setter TargetName="BorderTarget" Property="Height" Value="24"/>
                    <Setter TargetName="TextTargetSelected" Property="Foreground" Value="DarkGray"/>
                    <Setter TargetName="TextTargetUnselected" Property="Foreground" Value="DarkGray"/>
                </Trigger>
            </DataTemplate.Triggers>
        </DataTemplate>
        <DataTemplate x:Key="EffectTemplate">
            <TextBlock Text="{Binding Text}" FontSize="16"/>
        </DataTemplate>
        <DataTemplate x:Key="Linex4Template" DataType="{x:Type local:Alcoholx4Line}">
            <Border x:Name="borderLine">
                <DockPanel Margin="5,2,5,2">
                    <TextBlock DockPanel.Dock="Left" Text="{Binding Component1}" FontSize="16" x:Name="componentText1" VerticalAlignment="Center" Width="130"/>
                    <TextBlock DockPanel.Dock="Left" FontWeight="Bold" FontSize="16" Foreground="Red" Visibility="{Binding IsMatching, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource VisibleHidden}}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30">?</TextBlock>
                    <Button DockPanel.Dock="Right" Command="{StaticResource DeleteLineCommand}" Content="X" FontSize="16" MinWidth="16" IsEnabled="{Binding EffectIndex, Converter={StaticResource convPositiveIntToObject}, ConverterParameter={StaticResource FalseTrue}}" VerticalAlignment="Center" Margin="2,1,2,1"/>
                    <Grid VerticalAlignment="Center">
                        <ComboBox ItemsSource="{Binding Owner.EffectTextList}" SelectedIndex="{Binding EffectIndex}" ItemContainerStyle="{StaticResource ComboBoxItemStretch}" IsReadOnly="True" HorizontalContentAlignment="Stretch" FontSize="16" x:Name="comboEffectList" VerticalAlignment="Center"/>
                        <ContentControl Content="{Binding CalculatedEffect}" ContentTemplate="{StaticResource EffectTemplate}" FontSize="16" Foreground="Gray" VerticalAlignment="Center" IsHitTestVisible="False" Margin="6,0,20,0"/>
                    </Grid>
                </DockPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="Linex4x4Template">
            <Border x:Name="borderLine">
                <DockPanel Margin="5,2,5,2">
                    <TextBlock DockPanel.Dock="Left" Text="{Binding Component1}" FontSize="16" x:Name="componentText1" VerticalAlignment="Center" Width="130"/>
                    <TextBlock DockPanel.Dock="Left" Text="{Binding Component2}" FontSize="16" x:Name="componentText2" VerticalAlignment="Center" Width="190"/>
                    <TextBlock DockPanel.Dock="Left" FontWeight="Bold" FontSize="16" Foreground="Red" Visibility="{Binding IsMatching, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource VisibleHidden}}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30">?</TextBlock>
                    <Button DockPanel.Dock="Right" Command="{StaticResource DeleteLineCommand}" Content="X" FontSize="16" MinWidth="16" IsEnabled="{Binding EffectIndex, Converter={StaticResource convPositiveIntToObject}, ConverterParameter={StaticResource FalseTrue}}" VerticalAlignment="Center" Margin="2,1,2,1"/>
                    <Grid VerticalAlignment="Center">
                        <ComboBox ItemsSource="{Binding Owner.EffectTextList}" SelectedIndex="{Binding EffectIndex}" ItemContainerStyle="{StaticResource ComboBoxItemStretch}" IsReadOnly="True" HorizontalContentAlignment="Stretch" FontSize="16" x:Name="comboEffectList" VerticalAlignment="Center"/>
                        <ContentControl Content="{Binding CalculatedEffect}" ContentTemplate="{StaticResource EffectTemplate}" FontSize="16" Foreground="Gray" VerticalAlignment="Center" IsHitTestVisible="False" Margin="6,0,20,0"/>
                    </Grid>
                </DockPanel>
            </Border>
        </DataTemplate>
