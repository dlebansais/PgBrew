                </ScrollViewer>
            </DockPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:PgBrewerPageBeers}">
            <Grid>
                <TabControl ItemsSource="{Binding AlcoholList}" SelectedIndex="{Binding SelectedAlcoholIndex}" ItemTemplate="{StaticResource TabItemLevel2Template}" Background="LightBlue" ItemContainerStyle="{StaticResource TabItemNoStyle}" Margin="10,0,0,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5">
                    <Button Command="{StaticResource BackCommand}" Background="Transparent" BorderThickness="0" IsEnabled="{Binding BackForward.CanGoBack}" Margin="0,0,5,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                        </Button.Style>
                        <Image Source="{StaticResource imgUndo}" Opacity="{Binding IsEnabled, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource DisabledNormal}, RelativeSource={RelativeSource AncestorType={x:Type Button}}}" Width="16" Height="16" Margin="2"/>
                    </Button>
                    <Button Command="{StaticResource ForwardCommand}" Background="Transparent" BorderThickness="0" IsEnabled="{Binding BackForward.CanGoForward}" Margin="5,0,0,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                        </Button.Style>
                        <Image Source="{StaticResource imgRedo}" Opacity="{Binding IsEnabled, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource DisabledNormal}, RelativeSource={RelativeSource AncestorType={x:Type Button}}}" Width="16" Height="16" Margin="2"/>
                    </Button>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:PgBrewerPageLiquors}">
            <Grid>
                <TabControl ItemsSource="{Binding AlcoholList}" SelectedIndex="{Binding SelectedAlcoholIndex}" ItemTemplate="{StaticResource TabItemLevel2Template}" Background="LightBlue" ItemContainerStyle="{StaticResource TabItemNoStyle}" Margin="10,0,0,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5">
                    <Button Command="{StaticResource BackCommand}" Background="Transparent" BorderThickness="0" IsEnabled="{Binding BackForward.CanGoBack}" Margin="0,0,5,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                        </Button.Style>
                        <Image Source="{StaticResource imgUndo}" Opacity="{Binding IsEnabled, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource DisabledNormal}, RelativeSource={RelativeSource AncestorType={x:Type Button}}}" Width="16" Height="16" Margin="2"/>
                    </Button>
