<UserControl x:Class="PgBrew.Alcoholx4Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PgBrew">
    <UserControl.Resources>
        <DataTemplate x:Key="Line">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left" Text="{Binding Component1}" MinWidth="100"/>
                <Button DockPanel.Dock="Right" Click="OnDelete" Content="X" MinWidth="16"/>
                <ComboBox SelectedIndex="{Binding EffectIndex}" ItemsSource="{Binding Owner.EffectList}"/>
            </DockPanel>
        </DataTemplate>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding Lines}" ItemTemplate="{StaticResource Line}"/>
    </ScrollViewer>
</UserControl>
