<Window x:Class="PgBrew.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PgBrew"
        xmlns:conv="clr-namespace:Converters"
        Title="Project: Gorgon - Brewing"
        ResizeMode="CanResize"
        MinWidth="1000"
        MinHeight="500"
        Closing="OnClosing">
    <Window.Resources>
        <conv:BooleanToObjectConverter x:Key="convBooleanToObject"/>
        <DataTemplate x:Key="ChoiceTemplate">
            <TextBlock Text="{Binding Name}"/>
        </DataTemplate>
        <DataTemplate x:Key="AssociationLine">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left" Text="{Binding Component.Name}" TextAlignment="Right" MinWidth="200"/>
                <TextBlock DockPanel.Dock="Left">:</TextBlock>
                <Button DockPanel.Dock="Right" Click="OnDelete" Content="X" MinWidth="16"/>
                <ComboBox ItemsSource="{Binding ChoiceList}" SelectedIndex="{Binding AssociationIndex}" ItemTemplate="{StaticResource ChoiceTemplate}"/>
            </DockPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <TabControl>
            <TabItem Header="Beer">
                <TabControl>
                    <TabItem Header="Basic Lager">
                        <local:Alcoholx4Control DataContext="{Binding BasicLager}"/>
                    </TabItem>
                    <TabItem Header="Pale Ale">
                        <local:Alcoholx4x4Control DataContext="{Binding PaleAle}"/>
                    </TabItem>
                    <TabItem Header="Marzen">
                        <local:Alcoholx4x4x2Control DataContext="{Binding Marzen}"/>
                    </TabItem>
                    <TabItem Header="Goblin Ale">
                        <local:Alcoholx3x3x4x3Control DataContext="{Binding GoblinAle}"/>
                    </TabItem>
                    <TabItem Header="Orcish Bock">
                        <local:Alcoholx4x3x4x3Control DataContext="{Binding OrcishBock}"/>
                    </TabItem>
                    <TabItem Header="Brown Ale">
                        <local:Alcoholx4x3x4x3Control DataContext="{Binding BrownAle}"/>
                    </TabItem>
                    <TabItem Header="Hegemony Lager">
                        <local:Alcoholx4x3x4x3Control DataContext="{Binding HegemonyLager}"/>
                    </TabItem>
                    <TabItem Header="Dwarven Stout">
                        <local:Alcoholx4x3x4x3Control DataContext="{Binding DwarvenStout}"/>
                    </TabItem>
                </TabControl>
            </TabItem>
            <TabItem Header="Hard Liquor">
                <TabItem Header="Potato Vodka">
                </TabItem>
            </TabItem>
            <TabItem Header="Settings">
                <ScrollViewer>
                    <DockPanel>
                        <GroupBox DockPanel.Dock="Top" Grid.Row="0" Grid.Column="0" Header="Miscellaneous">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <ItemsControl Grid.Row="0" Grid.Column="0" ItemsSource="{Binding AssociationFruit1}" ItemTemplate="{StaticResource AssociationLine}"/>
                                <ItemsControl Grid.Row="0" Grid.Column="1" ItemsSource="{Binding AssociationVeggie1}" ItemTemplate="{StaticResource AssociationLine}"/>
                                <ItemsControl Grid.Row="0" Grid.Column="2" ItemsSource="{Binding AssociationVeggie2Liquor}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </Grid>
                        </GroupBox>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <GroupBox Grid.Row="0" Grid.Column="0" Header="Veggies for beer">
                                <ItemsControl ItemsSource="{Binding AssociationVeggie2Beer}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </GroupBox>
                            <GroupBox Grid.Row="1" Grid.Column="0" Header="Flavors #1 for beer">
                                <ItemsControl ItemsSource="{Binding AssociationFlavor1Beer}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </GroupBox>
                            <GroupBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Header="Fruits">
                                <ItemsControl ItemsSource="{Binding AssociationFruit2}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </GroupBox>
                            <GroupBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Header="Mushrooms">
                                <ItemsControl ItemsSource="{Binding AssociationMushroom3}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </GroupBox>
                            <GroupBox Grid.Row="4" Grid.Column="0" Header="Flavors #2 for beer">
                                <ItemsControl ItemsSource="{Binding AssociationFlavor2Beer}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </GroupBox>
                            <GroupBox Grid.Row="0" Grid.Column="1" Header="Parts #1 for liquor">
                                <ItemsControl ItemsSource="{Binding AssociationParts1}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </GroupBox>
                            <GroupBox Grid.Row="1" Grid.Column="1" Header="Flavors #1 for liquor">
                                <ItemsControl ItemsSource="{Binding AssociationFlavor1Liquor}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </GroupBox>
                            <GroupBox Grid.Row="4" Grid.Column="1" Header="Parts #2 for liquor">
                                <ItemsControl ItemsSource="{Binding AssociationParts2}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </GroupBox>
                            <GroupBox Grid.Row="5" Grid.Column="1" Header="Flavors #2 for liquor">
                                <ItemsControl ItemsSource="{Binding AssociationFlavor2Liquor}" ItemTemplate="{StaticResource AssociationLine}"/>
                            </GroupBox>
                        </Grid>
                    </DockPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        <Button IsEnabled="{Binding IsChanged}" Click="OnSave" HorizontalAlignment="Right" VerticalAlignment="Top">Save</Button>
    </Grid>
</Window>
