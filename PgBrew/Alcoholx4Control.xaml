<UserControl x:Class="PgBrew.Alcoholx4Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PgBrew">
    <UserControl.Resources>
        <DataTemplate x:Key="Line">
            <DockPanel>
                <TextBlock Text="{Binding Component1}"/>
                <ComboBox SelectedIndex="{Binding EffectIndex}" ItemsSource="{x:Static local:Alcoholx4.EffectList}"/>
            </DockPanel>
        </DataTemplate>
    </UserControl.Resources>
    <ItemsControl ItemsSource="{Binding Lines}" ItemTemplate="{StaticResource Line}"/>
</UserControl>
